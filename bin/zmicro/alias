#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro task <args ...>"
  echo ""

  task --help
}

version() {
  task version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    task "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
